<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kuzuiauhalifu">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AuthActivity"
            android:theme="@style/hideTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".citizen.CitizenActivity"
            android:label="Citizen Hub" />
        <activity
            android:name=".police.PoliceActivity"
            android:label="Police Hub" />
        <activity
            android:name=".citizen.SettingsActivity"
            android:parentActivityName=".citizen.CitizenActivity" />
        <activity android:name=".police.PoliceSettingsActivity" />
        <activity
            android:name=".citizen.CitizenBulletinActivity"
            android:parentActivityName=".citizen.CitizenActivity" />
        <activity
            android:name=".citizen.CitizenHistoryActivity"
            android:parentActivityName=".citizen.CitizenActivity" />
        <activity android:name=".citizen.CitizenViewHistoryActivity" />
        <activity android:name=".citizen.CitizenViewBulletinActivity" />
        <activity android:name=".police.PoliceBulletinActivity" />
        <activity android:name=".police.PoliceViewBulletinActivity" />
        <activity android:name=".police.IncomingReportsActivity" />
        <activity android:name=".police.ViewIncomingReportsActivity"></activity>
    </application>

</manifest>